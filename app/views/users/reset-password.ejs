<!DOCTYPE html>
<html>
	<head>
		<% include ../includes/head %>		
	</head>
	<body id="page-login">						

		<div class="container">
		  		<div class="row">
		  			<div class="col-12 col-md-4 offset-md-4">  				  				  		
		  				 <div class="card mt-5">
		  				 	<div class="card-header">		                        
		                        <h5 class="card-title m-0">Reset</h5>	                        
		                    </div> 
		  				 	
		  				 	<div class="card-body">
		  				 				  				 					  							  			
				  				<form action="/reset-password" method="post" role="form">
				  									  									  					
				  					<% include ../includes/flash %>
				  									  									  									  									  						
									<div class="form-group">
								        <div class="input-group">
								        	<div class="input-group-prepend">
          										<div class="input-group-text">@</div>
        									</div>								        						               								                       
								             <input class="form-control" type="email" name="email" value="<%=email%>" maxlength="50" />
								         </div>
								     </div>	
								     								    											
									<input class="btn btn-success btn-block" type="submit" value="Send email">							
																														
								</form>
								
								<hr>
																					
								<div class="form-group">
									<a href="/login">Login</a><br>
									Don't have an account? <a href="/signup">Sign up</a>
								</div> <!-- form-group -->	
								
							</div> <!-- card-body -->
						</div> <!-- card -->  				
		  			</div> <!-- col -->
		  		</div> <!-- row -->
		</div> <!-- container -->

		<% include ../includes/footer %>			
	</body>
</html>